@model AppDocentes.Models.Modulo

@{
    ViewData["Title"] = "Crear Módulo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Nuevo Módulo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* <div class="form-group">
                <label asp-for="IdModulo" class="control-label"></label>
                <input asp-for="IdModulo" class="form-control" />
                <span asp-validation-for="IdModulo" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <label asp-for="IdCarrera" class="control-label"></label>
                <select asp-for="IdCarrera" class="form-control" asp-items="ViewBag.IdCarrera">
                    <option value="">-- Seleccione una carrera --</option>
                </select>
                <span asp-validation-for="IdCarrera" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NomModulo" class="control-label"></label>
                <input asp-for="NomModulo" class="form-control" />
                <span asp-validation-for="NomModulo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Horas" class="control-label"></label>
                <input asp-for="Horas" class="form-control" />
                <span asp-validation-for="Horas" class="text-danger"></span>
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver Atrás</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
