@model AppDocentes.Models.Modulo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Módulo</h1>

<div class="row">


<div class="col-md-6">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdModulo" />

        <div class="form-group">
            <label asp-for="IdCarrera" class="control-label"></label>
            <select asp-for="IdCarrera" class="form-control" asp-items="ViewBag.IdCarrera"></select>
            <span asp-validation-for="IdCarrera" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NomModulo" class="control-label"></label>
            <input asp-for="NomModulo" class="form-control" />
            <span asp-validation-for="NomModulo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Horas" class="control-label"></label>
            <input asp-for="Horas" class="form-control" />
            <span asp-validation-for="Horas" class="text-danger"></span>
        </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver Atras</a>
            </div>
    </form>
</div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
