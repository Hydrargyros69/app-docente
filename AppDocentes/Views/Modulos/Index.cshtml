@model IEnumerable<AppDocentes.Models.Modulo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomModulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCarreraNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomModulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCarreraNavigation.IdCarrera)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdModulo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdModulo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdModulo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
