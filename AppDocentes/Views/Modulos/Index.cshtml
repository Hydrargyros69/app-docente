@model IEnumerable<AppDocentes.Models.Modulo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
    <h2 class="mb-3">Lista de Modulos</h2>
    <a asp-action="Create" class="btn btn-primary">Nuevo Módulo</a>
</div>

<!-- Formulario de búsqueda y filtro -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-2">
       
        <!-- Filtro por carrera -->
        <div class="col-12 col-md-4 mb-2">
            <select name="idCarrera" class="form-control" asp-items="ViewBag.IdCarrera">
                <option value="">-- Todas las Carreras --</option>
            </select>
        </div>

        <div class="col-12 col-md-4 d-flex mb-2">
            <button class="btn btn-outline-secondary me-2 flex-grow-1" type="submit">Buscar</button>
            <a asp-action="Index" class="btn btn-outline-dark flex-grow-1">Limpiar</a>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover">

        <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomModulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horas)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomModulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horas)
            </td>
           
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" class="btn btn-warning btn-sm me-1" asp-route-id="@item.IdModulo">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm me-1" asp-route-id="@item.IdModulo">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
    </table>
</div>
