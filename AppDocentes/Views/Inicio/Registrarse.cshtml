@model AppDocentes.Models.Usuario

@{
    ViewData["Title"] = "Registrarse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-4 col-md-6">
            <div class="card">
                <div class="card-header">
                    Regístrate
                </div>

                <div class="card-body">
                    <form asp-controller="Inicio" asp-action="Registrarse" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="NomUsuario" class="form-label"></label>
                            <input asp-for="NomUsuario" class="form-control" placeholder="Nombre de usuario" />
                            <span asp-validation-for="NomUsuario" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CorrUsuario" class="form-label"></label>
                            <input asp-for="CorrUsuario" class="form-control" placeholder="Correo electrónico" type="email" />
                            <span asp-validation-for="CorrUsuario" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PassUsuario" class="form-label"></label>
                            <input asp-for="PassUsuario" class="form-control" placeholder="Contraseña" type="password" />
                            <span asp-validation-for="PassUsuario" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Registrarse</button>
                        </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
