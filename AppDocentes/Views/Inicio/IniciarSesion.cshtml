@{
    Layout = null;
    var mensaje = ViewBag.Mensaje as string;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Login - Cft Docentes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #0077b6, #90e0ef);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            margin: 0;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-title {
            font-size: 1.8rem;
            font-weight: bold;
            color: #0077b6;
        }

        .btn-primary {
            background-color: #0077b6;
            border: none;
        }

            .btn-primary:hover {
                background-color: #005f87;
            }

        /* Imagen en círculo */
        .logo-img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 50%;
            display: block;
            margin: 0 auto 1rem;
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        }

        @@media (max-width: 576px) {
            .login-card {
                padding: 20px;
            }

            .login-title {
                font-size: 1.4rem;
            }

            .form-label {
                font-size: 0.95rem;
            }

            .logo-img {
                width: 70px;
                height: 70px;
            }
        }

        @@media (min-width: 992px) {
            .logo-img {
                width: 140px;
                height: 140px;
            }
        }
    </style>
    <meta http-equiv="Cache-Control" content="no-store, no-cache, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />


</head>
<body>
    <div class="login-card text-center">
        <img src="~/img/Logo-CFT-Vertical-Contraforma.jpg" alt="Logo" class="logo-img mb-3" />
        <h2 class="login-title mb-4">Iniciar Sesión</h2>

        <form method="post" asp-action="IniciarSesion">
           
            <div class="mb-3 text-start">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" name="nombre" id="nombre" class="form-control" required />
            </div>

            <div class="mb-4 text-start">
                <label for="clave" class="form-label">Contraseña</label>
                <input type="password" name="clave" id="clave" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Ingresar</button>

            @if (!string.IsNullOrEmpty(mensaje))
            {
                <div class="alert alert-danger mt-3">@mensaje</div>
            }
        </form>
    </div>
</body>
</html>