@model IEnumerable<AppDocentes.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
    <h2 class="mb-3">Lista de Categorias</h2>
    <a asp-action="Create" class="btn btn-primary">Nueva Categoria</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">

        <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomCategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomCategoria)
            </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" class="btn btn-warning btn-sm me-1" asp-route-id="@item.IdCategoria">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" class="btn btn-danger btn-sm me-1" asp-route-id="@item.IdCategoria">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
        </tr>
    }
    </tbody>
    </table>
</div>
