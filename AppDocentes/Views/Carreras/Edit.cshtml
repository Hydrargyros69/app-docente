@model AppDocentes.Models.Carrera

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Carrera</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCarrera" />
            <div class="form-group">
                <label asp-for="NomCarrera" class="control-label"></label>
                <input asp-for="NomCarrera" class="form-control" />
                <span asp-validation-for="NomCarrera" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver Atras</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}